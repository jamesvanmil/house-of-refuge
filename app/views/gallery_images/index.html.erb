
<div class="container">
<h1 class="page-header">Image Gallery</h1>

<div class="row">
  <div class="col-md-9 col-lg-9">
    <% @gallery_images.each do |gallery_image| %>
      <div class="col-lg-3 col-md-4 xs-6 thumb"> 
        <%= link_to gallery_image_path(gallery_image), class: "thumbnail" do %>
          <%= image_tag gallery_image.image.url(:thumb) %>
        <% end %>
      </div>   
    <% end %>
  </div>
  <div class="col-md-3 col-lg-3">
    <%= render "facets" %> 
</div>
</div>
<%= will_paginate @gallery_images, renderer: BootstrapPagination::Rails %>
</div>
