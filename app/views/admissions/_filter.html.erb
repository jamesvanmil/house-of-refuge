<%= form_tag("/search-records", method: "get") do %>
  <div class="well">
  <h2>Search Filters</h2>

  <h4>Name</h4>
  <div class="form-group">
    <div class="input-group">
      <label>
        <%= text_field_tag(:name, default_value(:name), { class: 'form-control', placeholder: 'Begin typing a name' }) %>
      </label>
    </div>
  </div>

  <h4>Age</h4>
  <%= render partial: 'admissions/multiselect', locals: { field: :age, sort: true } %>

  <h4>Gender</h4>
  <div class="form-margin20">
      <div class="form-group">
    <div class="checkbox">
      <label>
        <%= check_box_tag(:female, "1", params[:female] == "1") %>Female <%= facet_count_for_gender(:female) %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="checkbox">
      <label>
        <%= check_box_tag(:male, "1", params[:male] == "1") %>Male <%= facet_count_for_gender(:male) %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="checkbox">
      <label>
        <%= check_box_tag(:unknown, "1", params[:unknown] == "1") %>Unknown/Not Recorded <%= facet_count_for_gender(:unknown) %>
      </label>
    </div>
  </div>
  </div>

  <h4>Reason Admitted</h4>
  <%= render partial: 'admissions/multiselect', locals: { field: :for_what_committed_index, sort: false } %>

  <h4>Religion</h4>
  <%= render partial: 'admissions/multiselect', locals: { field: :religion_index, sort: false } %>

  <h4>Date Admitted</h4>
  <div class="form-group">
    <div class="input-group">
      <label>
        <%= text_field_tag(:begin_date, default_value(:begin_date), { class: 'form-control datepicker-from', placeholder: 'Enter start date' }) %>Begin Date
      </label>
    </div>

    <div class="input-group">
      <label>
        <%= text_field_tag(:end_date, default_value(:end_date), { class: 'form-control datepicker-to', placeholder: 'Enter end date' }) %>End Date
      </label>
    </div>
  </div>

  <h4>Race/Nationality</h4>
  <%= render partial: 'admissions/multiselect', locals: { field: :parentage_index, sort: false } %>

  <h4>Birth Location</h4>
  <h5>Country</h5>
  <%= render partial: 'admissions/multiselect', locals: { field: :whereborn_country, sort: false } %>
  <h5>State</h5>
  <%= render partial: 'admissions/multiselect', locals: { field: :whereborn_state, sort: false } %>
  <h5>City</h5>
  <%= render partial: 'admissions/multiselect', locals: { field: :whereborn_city, sort: false } %>

  <br>

  <%= submit_tag("Search", class: "btn btn-default") %>
  <%= link_to 'Reset', admissions_path, class: 'btn btn-default' %>
<% end %>
  </div>
