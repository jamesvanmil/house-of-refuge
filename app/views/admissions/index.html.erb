<p id="notice"><%= notice %></p>

<div class="container">

  <h1>Search:</h1>

    <% search_options = [
      ["Name", "name"],
      ["Alias", "alias"],
      ["By Whom Committed", "by_whom_committed"],
      ["Disposal", "disposal"],
      ["Parentage", "parentage"]
    ] %>

  <div class="row">
    <%= form_tag admissions_path, :method => :get do %>

      <% params[:search].each_with_index do |value, index| %>
        <div class="row">
          <div class="form-group col-sm-4">
            <%= select_tag("field#{index}", options_for_select(search_options, selected: params[:search][0][:field]), { class: 'form-control' } ) %>
          </div>
          <div class="form-group col-sm-4">
            <%= text_field_tag "value#{index}", params[:search][0][:value], { class: 'form-control' } %>
          </div>
        </div>
      <% end %>

      <%= submit_tag "Search", class: "btn btn-default" %>
      <%= link_to "Reset Search", admissions_path, class: "btn btn-default" %>
    <% end %>
  </div>


  <h1>Listing Admissions</h1>

  <table>
    <thead>
      <tr>
        <th><%= Admission.human_attribute_name(:history_number) %></th>
        <th><%= Admission.human_attribute_name(:name) %></th>
        <th><%= Admission.human_attribute_name(:age) %></th>
      </tr>
    </thead>

    <tbody>
      <% @admissions.each do |admission| %>
        <tr>
          <td><%= admission.history_number %></td>
          <td><%= link_to admission.name, admission %></td>
          <td><%= admission.age %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @search.hits, renderer: BootstrapPagination::Rails %>
</div>
