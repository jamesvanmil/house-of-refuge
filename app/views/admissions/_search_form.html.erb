<h1>Search</h1>

<% search_options = @fields.collect { |f| [f.capitalize.gsub(/_/, " "), f] } %>

<%= form_tag admissions_path, :method => :get do %>

  <% @search_array.each_with_index do |value, index| %>
    <div class="row search-row" id="search-row-<%= index %>">
      <div class="form-group col-sm-4">
        <%= select_tag("field#{index}", options_for_select(search_options, selected: @search_array[index][:field]), { id: "field#{index}", class: 'form-control' } ) %>
      </div>
      <div class="form-group col-sm-4">
        <%= text_field_tag "value#{index}", @search_array[index][:value], { id: "value#{index}", class: 'form-control' } %>
      </div>
      <div class="form-group col-sm-4">
        <%= link_to "Remove Field", "", class: "btn btn-default remove-search-field" unless @search_array.length == 1 %>
      </div>
    </div>
  <% end %>

  <%= link_to "Add Field", "", class: "btn btn-default add-search-field" %>

  <div class="row" id="search-button-row">
    <%= submit_tag "Search", class: "btn btn-default" %>
    <%= link_to "Reset Search", admissions_path, class: "btn btn-default" %>
  </div>
<% end %>
